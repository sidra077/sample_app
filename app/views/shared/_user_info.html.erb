
<div class = "user_info">
	<a href = "<%= user_path(current_user) %>">
		<%= gravatar_for current_user, :size => 40 %>
		
		<span class = "user_name">
			<%= current_user.name %>
			</span>
			
				<span class = "Email">
					<%= current_user.email %><br/>
					</span>
				
				<span class = "microposts">
					<%= pluralize(current_user.microposts.count, "micropost") %>
					</span>
					</a>
					</div>